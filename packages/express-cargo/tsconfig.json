{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "emitDeclarationOnly": false,
        "types": ["reflect-metadata"],
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": false
    },
    "include": ["src", "src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
